{
  "manifest_version": 3,
  "name": "ExtractInfo",
  "version": "1.0",
  "description": "Copy relevant data from Facebook chat widget conversations and paste them into Google Sheets",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "clipboardWrite",
    "clipboardRead"
  ],
  "host_permissions": [
    "https://web.facebook.com/*",
    "https://facebook.com/*",
    "https://www.facebook.com/*",
    "https://*.facebook.com/*",
    "https://script.google.com/*",
    "https://*.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "128": "images/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://web.facebook.com/*",
        "https://facebook.com/*",
        "https://www.facebook.com/*",
        "https://*.facebook.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "128": "images/icon128.png"
  }
}
